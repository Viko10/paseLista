<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".soporte">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="248dp"
        android:background="@drawable/top_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageViewFoto"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:src="@mipmap/logopaselista" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Presentan:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Victor Cruz Cruz"
                android:textSize="15sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Fernando de Jesus Alvarez Lozano"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Jorge Santiago Rios"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Acesores: "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Lorena Mendoza Guzmán"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Mtro. Mario Pérez Bautista"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="700dp"
        android:background="@drawable/piepantalla"
        android:orientation="horizontal"
        >

    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="710dp"
        android:layout_marginStart="10dp"
        android:src="@mipmap/logohidalgo"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="720dp"
        android:layout_marginStart="95dp"
        android:src="@mipmap/contacto"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginTop="715dp"
        android:layout_marginStart="130dp"
        android:text="Contacto"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="10dp"
        />
    <TextView
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginTop="735dp"
        android:layout_marginStart="130dp"
        android:text="01 (738) 73 54000"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="10dp"
        />
    <TextView
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="710dp"
        android:layout_marginStart="240dp"
        android:text="Paseo del Agrarismo 2000.
Carr. Mixquiahuala - Tula, km 2.5
Mixquiahuala de Juárez, Hidalgo, C.P. 42700"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="10dp"
        />


</RelativeLayout>
