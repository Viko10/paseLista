<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crearGrupo">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:background="@drawable/top_background"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" >


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="CreÃ¡ tu Grupo"
            android:textColor="#DCD8D8"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="515dp"
        app:cardCornerRadius="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:src="@mipmap/grupos"
                android:padding="28dp">
            </ImageView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="CLAVE GRUPO"
                android:textSize="15dp"
                android:textStyle="bold"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                android:background="@drawable/edi_text_background"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/cvegrupo"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/cajas"
                    android:background="@color/cajas"
                    android:hint="Clave de 5 caracteres"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/grp_txt_cve"

                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Nombre Materia"
                android:textSize="15dp"
                android:textStyle="bold"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                android:background="@drawable/edi_text_background"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/nombremateria"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/cajas"
                    android:background="@color/cajas"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/grp_txt_nomMateria"

                    />



            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Creditos"
                android:textSize="15dp"
                android:textStyle="bold"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                android:background="@drawable/edi_text_background"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/cred"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/cajas"
                    android:background="@color/cajas"
                    android:inputType="number"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/grp_txt_cred"

                    />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Carrera"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edi_text_background"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/carrera"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/grp_txt_carrera"
                    android:drawableTint="@color/cajas"
                    android:background="@color/cajas"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/grp_btn_guardar"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/card_background"
                    android:text="Guardar"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    tools:ignore="MissingConstraints" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/grp_btn_elimiar"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/card_background"
                        android:text="Eliminar"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        tools:ignore="MissingConstraints" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/grp_btn_modificar"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/card_background"
                        android:text="Modificar"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>
